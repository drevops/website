{
    "name": "drevops/website",
    "description": "Drupal 11 implementation of DrevOps Website for DrevOps",
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "composer/installers": "^2.3",
        "cweagans/composer-patches": "^1.7.3",
        "drevops/test-private-package": "^1.0",
        "drupal/admin_toolbar": "^3.6.2",
        "drupal/ai_image_alt_text": "^1.0.1",
        "drupal/ai_provider_openai": "^1.2",
        "drupal/civictheme": "~1.12.2",
        "drupal/clamav": "^2.1",
        "drupal/cloudflare": "^2@beta",
        "drupal/coffee": "^2.0.1",
        "drupal/config_split": "^2.0.2",
        "drupal/config_update": "^2@alpha",
        "drupal/core-composer-scaffold": "~11.2.9",
        "drupal/core-recommended": "~11.2.8",
        "drupal/devel": "^5.5.0",
        "drupal/diff": "^1.9",
        "drupal/entity_clone": "^2.1@beta",
        "drupal/entity_usage": "^2.0@beta",
        "drupal/environment_indicator": "^4.0.25",
        "drupal/field_group": "^4",
        "drupal/gin": "^4.0.6",
        "drupal/gin_toolbar": "^2",
        "drupal/google_tag": "^2.0.9",
        "drupal/lagoon_logs": "^3.0.1",
        "drupal/metatag": "^2.2",
        "drupal/pathauto": "^1.14",
        "drupal/purge": "^3.6",
        "drupal/purge_control": "^2.1",
        "drupal/recaptcha_v3": "^2.0.4",
        "drupal/redirect": "^1.12",
        "drupal/redis": "^1.11",
        "drupal/robotstxt": "^1.6",
        "drupal/scheduled_transitions": "^2.8.3",
        "drupal/search_api": "^1.40",
        "drupal/search_api_solr": "^4.3.10",
        "drupal/seckit": "^2.0.3",
        "drupal/shield": "^1.8",
        "drupal/simple_sitemap": "^4.2.3",
        "drupal/stage_file_proxy": "^3.1.6",
        "drupal/views_bulk_operations": "^4.4.4",
        "drush/drush": "^13.7.0",
        "oomphinc/composer-installers-extender": "^2.0.1",
        "symfony/http-client": "^6.4.28",
        "webflo/drupal-finder": "^1.3.1"
    },
    "require-dev": {
        "behat/behat": "^3.27",
        "dantleech/gherkin-lint": "^0.2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2.0",
        "drevops/behat-format-progress-fail": "^1.4",
        "drevops/behat-screenshot": "^2.2",
        "drevops/behat-steps": "^3.4.0",
        "drevops/phpcs-standard": "^0.2.0",
        "drupal/core-dev": "~11.2.9",
        "drupal/drupal-extension": "^5.1",
        "ergebnis/composer-normalize": "^2.48.2",
        "mglaman/phpstan-drupal": "^2.0.10",
        "palantirnet/drupal-rector": "^0.21.1",
        "phpcompatibility/php-compatibility": "^9.3.5",
        "phpmd/phpmd": "^2.15",
        "phpspec/prophecy-phpunit": "^2.4",
        "phpstan/extension-installer": "^1.4.3",
        "pyrech/composer-changelogs": "^1.8.2",
        "vincentlanglet/twig-cs-fixer": "^3.11"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/andresgmh/cloudflare-php.git",
            "options": {
                "reference": "2cb793bc18cd530e9140af308b3627c814294a7d"
            }
        },
        {
            "type": "vcs",
            "url": "git@github.com:drevops/test-private-package.git"
        }
    ],
    "minimum-stability": "beta",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/phpunit/"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "ergebnis/composer-normalize": true,
            "oomphinc/composer-installers-extender": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "pyrech/composer-changelogs": true,
            "tbachert/spi": true
        },
        "discard-changes": true,
        "platform": {
            "php": "8.3.24"
        },
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[project-root]/.gitattributes": false,
                "[web-root]/.csslintrc": false,
                "[web-root]/.editorconfig": false,
                "[web-root]/.eslintignore": false,
                "[web-root]/.eslintrc.json": false,
                "[web-root]/.gitattributes": false,
                "[web-root]/.ht.router.php": false,
                "[web-root]/.htaccess": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/README.md": false,
                "[web-root]/README.txt": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/robots.txt": false,
                "[web-root]/sites/example.settings.local.php": false,
                "[web-root]/sites/example.sites.php": false,
                "[web-root]/update.php": false,
                "[web-root]/web.config": false
            },
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:bower-asset",
                "type:drupal-library",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "recipes/{$name}": [
                "type:drupal-recipe"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset",
            "drupal-library"
        ],
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/civictheme": {
                "Remove Shortcut from theme dependency": "patches/civictheme-remove-shortcut-mr19.diff"
            },
            "drupal/seckit": {
                "Breaks sitemap.xml when JS +CSS + Noscript protection is enabled - https://www.drupal.org/project/seckit/issues/3219252": "https://www.drupal.org/files/issues/2025-05-07/3219252-9.patch"
            },
            "palantirnet/drupal-rector": {
                "Improve error handling for incorrect test namespaces - https://www.drupal.org/project/rector/issues/3540378": "patches/3540378-rector-skip-webform-cards-tests.patch"
            }
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    }
}
